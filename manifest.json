{
    "manifest_version": 2,
    "name": "MLB TV Controls",
    "version": "1.1",

    "description": "Adds additional player controls to this MLB.tv player",
    "homepage_url": "https://github.com/patrickkenzie/mlbtvcontrols",
    "icons": {
        "48": "icons/icon.svg"
    },

    "applications": {
        "gecko": {
            "id": "mlbtvcontrols@patrickkenzie.com"
        }
    },

    "permissions": [
        "activeTab"
    ],

    "content_scripts": [
        {
            "matches": ["https://*.mlb.com/tv/*"],
            "css": ["controls.css"],
            "js": ["content_scripts/controls.js"]
        }
    ]
}
